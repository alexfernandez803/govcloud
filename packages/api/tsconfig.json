{
  "compilerOptions": {
    "target": "es2018", // Specify the ECMAScript target version
    "module": "commonjs", // Specify the module system
    "lib": ["es2018"], // Specify the library files to be included
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src", // Specify the root directory of your source files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "resolveJsonModule": true, // Enable importing JSON files as modules
    "declaration": true, // Generate declaration files
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src"], // Specify the files to be included in compilation
  "exclude": ["node_modules"] // Specify the files to be excluded from compilation
}
